<div class="rounded position-relative fruite-item">
    <a href="/shop/{{id}}" style="text-decoration: none; color: inherit;">
        <div class="fruite-img" style="width: 300px; height: 300px; overflow: hidden;">
            <img src="{{imagePath}}" class="img-fluid rounded-top" style="width: 100%; height: 100%; object-fit: cover;">
        </div>

        {{#if Category}}
        <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">{{Category.name}}</div>
        {{/if}}
        <div class="p-4 border border-secondary border-top-0 rounded-bottom">
            <h4>{{name}}</h4>
            <p>{{summary}}</p>
            <div class="d-flex justify-content-between flex-lg-wrap">
                <p class="text-dark fs-5 fw-bold mb-0">${{price}} / kg</p>
                <a onclick="addCart({{id}}, 1)" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart</a>
            </div>
        </div>
    </a>
</div>
